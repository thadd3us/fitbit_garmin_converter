# EditorConfig configuration for code consistency
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{js,json}]
indent_size = 2

[*.toml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
